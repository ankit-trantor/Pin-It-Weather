<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="4">

        <include
            layout="@layout/weather_overview"
            android:layout_width="match_parent"
            android:layout_height="106dp"
            android:visibility="visible" />

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@color/primary_light"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="0dp"
            android:stateListAnimator="@anim/lift_up"
            android:transitionName="card"
            card_view:cardCornerRadius="2dp"
            card_view:cardPreventCornerOverlap="false"
            card_view:cardUseCompatPadding="true">

            <ImageView
                android:id="@+id/card_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/primary_light"
                android:contentDescription="Test"
                android:foreground="@color/transblack"
                android:scaleType="centerCrop"
                android:transitionName="cover"></ImageView>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                android:transitionName="info">

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tempLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_margin="2dp"
                        android:text="High: "
                        android:textColor="@color/primary_text"
                        android:textSize="24sp"
                        android:textStyle="normal|bold"
                        android:transitionName="temp" />

                    <TextView
                        android:id="@+id/tvTempHigh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_margin="2dp"
                        android:text="25.3째"
                        android:textColor="@color/primary_text"
                        android:textSize="24sp"
                        android:transitionName="temp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tempLowLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_margin="2dp"
                        android:text="Low: "
                        android:textColor="@color/primary_text"
                        android:textSize="24sp"
                        android:textStyle="normal|bold"
                        android:transitionName="temp" />

                    <TextView
                        android:id="@+id/tvTempLow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_margin="2dp"
                        android:text="25.3째"
                        android:textColor="@color/primary_text"
                        android:textSize="24sp"
                        android:transitionName="temp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center"
                        android:layout_marginLeft="20dp"
                        android:orientation="vertical"
                        android:transitionName="info">
                        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/windLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_margin="2dp"
                                android:text="Wind: "
                                android:textColor="@color/primary_text"
                                android:textSize="24sp"
                                android:textStyle="normal|bold"
                                android:transitionName="temp" />

                            <TextView
                                android:id="@+id/tvWind"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_margin="2dp"
                                android:text="12.3째"
                                android:textColor="@color/primary_text"
                                android:textSize="24sp"
                                android:transitionName="temp" />
                        </LinearLayout>


                        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/PressureLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_margin="2dp"
                                android:text="Pressure: "
                                android:textColor="@color/primary_text"
                                android:textSize="24sp"
                                android:textStyle="normal|bold"
                                android:transitionName="temp" />

                            <TextView
                                android:id="@+id/tvPressure"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_margin="2dp"
                                android:text="25.3째"
                                android:textColor="@color/primary_text"
                                android:textSize="24sp"
                                android:transitionName="temp" />
                        </LinearLayout>

                        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/humidLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_margin="2dp"
                                android:text="Humidity: "
                                android:textColor="@color/primary_text"
                                android:textSize="24sp"
                                android:textStyle="normal|bold"
                                android:transitionName="temp" />

                            <TextView
                                android:id="@+id/tvHumidity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_margin="2dp"
                                android:text="25.3째"
                                android:textColor="@color/primary_text"
                                android:textSize="24sp"
                                android:transitionName="temp" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>
